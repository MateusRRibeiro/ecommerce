{
    "compilerOptions": {
      "target": "esnext",
      "useDefineForClassFields": true,
      "module": "esnext",
      "moduleResolution": "node",
      "baseUrl": "./",
      "paths": {
        "@web/*": ["src/web/src/*"],
        "@mobile/*": ["src/mobile/src/*"]
      },
      "strict": true,
      "jsx": "preserve",
      "skipLibCheck": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "lib": ["esnext", "dom"]
    },
    "include": ["index.d.ts", "src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "main.ts"],
    "references": [{ "path": "./tsconfig.node.json" }]
  }
  